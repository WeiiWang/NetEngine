@model TChannel
@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>编辑频道</title>

    <script src="~/lib/jquery.js"></script>

    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />

    <script src="~/lib/layui/layui.js"></script>

    <script>
        layui.use('element', function () {
            var element = layui.element; //导航的hover效果、二级菜单等功能，需要依赖element模块
        });

        layui.use('form', function () {
            var form = layui.form;
        });
    </script>
</head>

<body style="width: 99%;padding-left: 1em;">
    <form method="post" id="form1" action="/Article/ChannelSave/" class="layui-form">

        <input type="hidden" value="@Model.Id" name="Id" />

        <div style="margin-top:20px">
            <span class="layui-breadcrumb" lay-separator=">">

                <a href="javascript:history.back(-1);">返回上一页</a>
                <a href="/Home/Center/">首页</a>
                <a href="">频道管理</a>
                <a><cite>频道信息</cite></a>
            </span>
        </div>
        <hr class="layui-bg-cyan" style="margin-top:8px">

        <div class="layui-tab" style="margin-top:24px">
            <ul class="layui-tab-title">
                <li class="layui-this">频道信息</li>

            </ul>
            <div class="layui-tab-content" style="border-left:1px solid #e6e6e6;border-bottom:1px solid #e6e6e6;padding-top:25px">
                <div class="layui-tab-item layui-show">



                    <div class="layui-form-item">
                        <label class="layui-form-label">频道名称</label>
                        <div class="layui-input-block">
                            <input type="text" name="Name" value="@Model.Name" required lay-verify="required" lay-reqText="请输入频道名称" placeholder="请输入频道名称" autocomplete="off" class="layui-input" style="width:30em">
                        </div>
                    </div>


                    <div class="layui-form-item">
                        <label class="layui-form-label">注释</label>
                        <div class="layui-input-block">
                            <input type="text" name="Remark" value="@Model.Remark" placeholder="请输入注释" autocomplete="off" class="layui-input" style="width:30em">
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label">排序数字</label>
                        <div class="layui-input-inline">
                            <input type="number" name="Sort" min="0" required lay-verify="required|number" value="@Model.Sort" lay-reqText="请输入排序数字" placeholder="请输入排序数字" autocomplete="off" class="layui-input">
                        </div>
                        <div class="layui-form-mid layui-word-aux">数字，越小越向前</div>
                    </div>

                </div>
            </div>
        </div>

        <div style="position: fixed;bottom:10px">
            <button type="submit" id="loginOk" lay-submit class="layui-btn layui-btn-normal">提交保存</button>
            <button type="button" class="layui-btn layui-btn-primary" onclick="javascript: history.back(-1);">返回上一页</button>
        </div>

    </form>
</body>
</html>
