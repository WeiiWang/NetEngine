@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>用户管理</title>

    <script src="~/lib/jquery.js"></script>

    <script src="~/lib/layui/layui.js"></script>

    <script src="~/lib/sweetalert.min.js"></script>

    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />

    <script src="~/lib/datatables/datatables.min.js"></script>
    <link href="~/lib/datatables/datatables.min.css" rel="stylesheet" />

    <script>


        function DeleteUser(id) {

            var dataJson = { id: id };

            swal({
                title: "Please confirm",
                text: "确认删除",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then(function (data) {
                if (data) {

                    $.ajax({
                        type: "POST",//方法类型
                        url: "/User/UserDelete/",
                        data: dataJson,
                        success: function (data) {
                            if (data.status == true) {
                                swal(data.msg, {
                                    icon: "success",
                                    dangerMode: true,
                                }).then(function (data) {
                                    if (data) {
                                        //刷新表格数据并保留分页信息
                                        $('#dtUserList').DataTable().ajax.reload(null, false);
                                    }
                                });


                            }
                            else {
                                swal("Red marks are required!", {
                                    icon: "error",
                                    text: data.msg
                                });
                            }
                        }
                    });
                }
            });
        }


        function GetUserList() {


            $('#dtUserList').DataTable().destroy();


            $("#dtUserList").DataTable({
                "ajax": {
                    url: "/User/GetUserList",
                    type: "get",
                },
                "columns": [
                    { "data": "name" },
                    { "data": "nickName" },
                    { "data": "phone" },
                    { "data": "email" },
                    { "data": "createTime" },
                    { "data": null }
                ],
                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": [5],
                        "render": function (data, type, row) {
                            return "<a href='/User/UserEdit/" + data.id + "'>编辑</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href=\"javascript:DeleteUser('" + data.id + "');\"'>删除</a>";
                        }
                    }
                ],
                "searching": true,
                "paging": true,
                "pageLength": 15,
                "lengthChange": false
            })

        }


        $(function () {// 初始化内容
            GetUserList();
        });
    </script>

    <script>
        layui.use('element', function () {
            var element = layui.element; //导航的hover效果、二级菜单等功能，需要依赖element模块
        });
    </script>
</head>

<body style="width: 99%;padding-left: 1em;">
    <form name="form1" method="post" id="form1">

        <div style="margin-top:20px">
            <span class="layui-breadcrumb" lay-separator=">">

                <a href="javascript:history.back(-1);">返回上一页</a>
                <a href="/Home/Center/">首页</a>
                <a href="">用户管理</a>
                <a><cite>所有用户</cite></a>
            </span>
        </div>
        <hr class="layui-bg-cyan" style="margin-top:8px">

        <div style="margin-top:10px">
            <a href="/User/UserEdit">
                <button type="button" class="layui-btn">
                    <i class="layui-icon">&#xe608;</i> 新增
                </button>
            </a>
        </div>



        <div style="margin-top:-2.3em">
            <table class="table table-striped table-bordered" data-toggle="table" id="dtUserList" style="width:100%">
                <thead>
                    <tr>
                        <th width="12em">用户名</th>
                        <th width="12em">昵称</th>
                        <th width="12em">电话</th>
                        <th width="18em">邮箱</th>
                        <th width="18em">创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>

            </table>
        </div>
    </form>
</body>
</html>
